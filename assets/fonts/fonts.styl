fontsPath = '../assets/fonts/';

@import url("https://fonts.googleapis.com/css?family=Roboto+Condensed:400,300,700");
@font-face
  font-family 'nerissemibold'
  src url(fontsPath + 'neris-fontfacekit/neris_semibold_macroman/Neris-SemiBold-webfont.eot')
  src url(fontsPath + 'neris-fontfacekit/neris_semibold_macroman/Neris-SemiBold-webfont.eot?#iefix') format('embedded-opentype'),
         url(fontsPath + 'neris-fontfacekit/neris_semibold_macroman/Neris-SemiBold-webfont.woff') format('woff'),
         url(fontsPath + 'neris-fontfacekit/neris_semibold_macroman/Neris-SemiBold-webfont.ttf') format('truetype'),
         url(fontsPath + 'neris-fontfacekit/neris_semibold_macroman/Neris-SemiBold-webfont.svg#nerissemibold') format('svg')
  font-weight normal
  font-style normal

